
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Site name</th>
		<th>Logo path</th>
		<th>Slogan</th>
		<th>Footer text</th>
		<!-- <th>&nbsp;</th> -->
	</tr>
	
	<% settings.each_with_index do |setting, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0%> hover">
			<td width="25%"><%= bolt_table_cell_link setting.site_name, bolt_setting_path(setting) %></td>
			<td width="25%"><%= bolt_table_cell_link setting.logo_path, bolt_setting_path(setting) %></td>
			<td width="25%"><%= bolt_table_cell_link setting.slogan, bolt_setting_path(setting) %></td>
			<td width="25%"><%= bolt_table_cell_link setting.footer_text, bolt_setting_path(setting) %></td>
			<!-- <td class="delete">
				<%= link_to(bolt_show_row_icon("delete"), bolt_setting_path(setting), :method => :delete, :confirm => "Are you sure you want to delete this setting?") %>
			</td> -->
		</tr>
	<% end %>
	
</table>
