<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title><%= bolt_generate_page_title %></title>
    <% bolt_config_stylesheet_includes.each do |stylesheet| %>
    <%= stylesheet_link_tag(stylesheet) %>
    <% end %>
    <% bolt_config_javascript_includes.each do |javascript| %>
    <%= javascript_include_tag(javascript) %>
    <% end %>

    <%= csrf_meta_tag %>
    <style type="text/css">
      
      p.margin
      {
      background-color:Cornsilk;
      }
      
    </style>
    <title>BOLT</title>
    <%= stylesheet_link_tag "scaffold" %>
    <%= stylesheet_link_tag "depot" , :media => "all" %>
    <%= stylesheet_link_tag "imagebubbles" , :media => "all" %>
    
    <%= javascript_include_tag :defaults %>
    
    
    <%= javascript_include_tag "jquery" %>
    
    <%= csrf_meta_tag %>
    <script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
    <script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>
  </head>
  <body>
    <div id="header">
     <div id="banner">
      <%= image_tag("logo.png",:size => '120x50' ) %>
      <%= @page_title || "Administration" %>
    </div>
    
      
    </div>
    
    <div id="content">
      <div id="data">
	<% if flash[:warning] %>
	<div id="error">
	  <%= flash[:warning] %>
	</div>
	<% end %>
	<% if flash[:notice] %>
	<div id="notice">
	  <%= flash[:notice] %>
	</div>
	<% end %>
	<%= yield %>
      </div>
    </div>
  </body>
</html>
