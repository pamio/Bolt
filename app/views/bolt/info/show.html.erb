<table valign="top">
  <tr>
    <td valign="top" style="width: 250px;padding-top: 40px;">
      <div id="menu">
	<% if(!@categories.blank?) %>
	<ul class="navmenu">	  
	  <% @categories.each do |cat| %>
	  <li><div class="menutop"><a href="#"><%= cat.name %></a><div class="toggle">+</div></div>
	    <% if(!cat.articles.blank?) %>
            <% cat.articles.each do |article| %>
	    <ul class="submenu">
	      <li><a href="/Articles/<%= article.id.to_s+'-'+article.title%>"><%= article.title %></a></li>	      
	    </ul>
	    
	    <% end %>	    	    
	    <% end %>
	  </li>

	  <% end %>	  
	  </ul>	 
   	<% else %>
	<ul class="navmenu">
	  <li><div class="menutop"><a href="/categories/articles">Articles</a><div class="toggle">+</div></div>
	  <li><div class="menutop"><a href="/categories/photos">Photos</a><div class="toggle">+</div></div>	    
	</ul>
	<% end %>  		  
      </div>      
    </td>
    <td style="width: 600px;">
      <% if(!@article.nil?) %>
      <%= raw(@article.body) %>
      <% else %>
      <h1><%= @page.title %></h1>
      <%= raw(@page.page_sections.first.body) %>
      <% end %>
    </td>
    <td style="float: right;">
      <% if(false) %>
      <%= raw(@page.page_sections.last.body) %>
      <% end %>
    </td>
 </tr>
</table>
