
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Page</th>
		<th>Banner path</th>
		<th>&nbsp;</th>
	</tr>
	
	<% banners.each_with_index do |banner, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= bolt_table_cell_link banner.page_id, bolt_banner_path(banner) %></td>
			<td><%= bolt_table_cell_link banner.banner_path, bolt_banner_path(banner) %></td>
			<td class="delete">
				<%= link_to(bolt_show_row_icon("delete"), bolt_banner_path(banner), :method => :delete, :confirm => "Are you sure you want to delete this banner?") %>
			</td>
		</tr>
	<% end %>
</table>
