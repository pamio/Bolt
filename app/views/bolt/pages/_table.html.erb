
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Path</th>
		<th>Title</th>
		<th>Show in menu</th>
		<th>Link url</th>
		<th>Deletable</th>
		<th>Menu match</th>
		<th>Status</th>
		<th>View template</th>
		<th>Default template</th>
		<th>&nbsp;</th>
	</tr>
	
	<% pages.each_with_index do |page, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= bolt_table_cell_link page.path, bolt_page_path(page) %></td>
			<td><%= bolt_table_cell_link page.title, bolt_page_path(page) %></td>
			<td><%= bolt_table_cell_link page.show_in_menu, bolt_page_path(page) %></td>
			<td><%= bolt_table_cell_link page.link_url, bolt_page_path(page) %></td>
			<td><%= bolt_table_cell_link page.deletable, bolt_page_path(page) %></td>
			<td><%= bolt_table_cell_link page.menu_match, bolt_page_path(page) %></td>
			<td><%= bolt_table_cell_link page.status, bolt_page_path(page) %></td>
			<td><%= bolt_table_cell_link page.view_template, bolt_page_path(page) %></td>
			<td><%= bolt_table_cell_link page.default_template, bolt_page_path(page) %></td>
			<td class="delete">
				<%= link_to(bolt_show_row_icon("delete"), bolt_page_path(page), :method => :delete, :confirm => "Are you sure you want to delete this page?") %>
			</td>
		</tr>
	<% end %>
</table>
