
<h2>View page</h2>

<%= form_for @page, :url => backbone_page_path(@page) do |f| %>

	<%= render :partial => 'backbone/pages/form', :locals => { :f => f } %>
	
	<p class="submits">
	  <%= link_to 'Cancel', backbone_pages_path, :class => 'cancel' %> or
		<%= f.submit "Save changes", :class => "update" %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{backbone_show_icon "table"}Back to list".html_safe, backbone_pages_path %></li>
<% end %>
