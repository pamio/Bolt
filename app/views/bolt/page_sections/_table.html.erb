
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Page</th>
		<th>Title</th>
		<th>Body</th>
		<th>Position</th>
		<th>&nbsp;</th>
	</tr>
	
	<% page_sections.each_with_index do |page_section, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= bolt_table_cell_link page_section.page_id, bolt_page_section_path(page_section) %></td>
			<td><%= bolt_table_cell_link page_section.title, bolt_page_section_path(page_section) %></td>
			<td><%= bolt_table_cell_link page_section.body, bolt_page_section_path(page_section) %></td>
			<td><%= bolt_table_cell_link page_section.position, bolt_page_section_path(page_section) %></td>
			<td class="delete">
				<%= link_to(bolt_show_row_icon("delete"), bolt_page_section_path(page_section), :method => :delete, :confirm => "Are you sure you want to delete this page section?") %>
			</td>
		</tr>
	<% end %>
</table>
