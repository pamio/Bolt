
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Article</th>
		<th>Category</th>
		<th>&nbsp;</th>
	</tr>
	
	<% articles_categories.each_with_index do |articles_category, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= bolt_table_cell_link articles_category.article_id, bolt_articles_category_path(articles_category) %></td>
			<td><%= bolt_table_cell_link articles_category.category_id, bolt_articles_category_path(articles_category) %></td>
			<td class="delete">
				<%= link_to(bolt_show_row_icon("delete"), bolt_articles_category_path(articles_category), :method => :delete, :confirm => "Are you sure you want to delete this articles category?") %>
			</td>
		</tr>
	<% end %>
</table>
