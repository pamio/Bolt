<h2>Users</h2>

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Status</th>
    <th>&nbsp;</th>
  </tr>
  
  <% @bolt_users.each_with_index do |user, index| %>	
  <tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
    <td><%= bolt_table_cell_link user.login, bolt_user_path(user) %></td>
    <td><%= bolt_table_cell_link user.name, bolt_user_path(user) %></td>
    <td><%= bolt_table_cell_link bolt_get_access_level_text(user.access_level), bolt_user_path(user) %></td>
    <td class="delete">
      <% if user.is_admin? == false || Bolt::User.has_more_than_one_admin %>
      <% confirm_message = "Are you sure you want to delete #{user.name}?" %>
      
      <% if user.id == @session_user.id %>
      <% confirm_message += "\n\nWARNING: This is your user account. You will be logged out if you proceed." %>
      <% end %>
      
      <%= link_to(bolt_show_row_icon("delete"), bolt_user_path(user), :method => :delete, :confirm => confirm_message) %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<%#= will_paginate @users %>

<%= content_for :sidebar do %>
<li><%= link_to "#{bolt_show_icon('add')}Add a new user".html_safe, new_bolt_user_path %></li>
<% end %>
