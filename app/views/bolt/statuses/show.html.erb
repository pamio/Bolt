
<h2>View status</h2>

<%= form_for @status, :url => backbone_status_path(@status) do |f| %>

	<%= render :partial => 'backbone/statuses/form', :locals => { :f => f } %>
	
	<p class="submits">
	  <%= link_to 'Cancel', backbone_statuses_path, :class => 'cancel' %> or
		<%= f.submit "Save changes", :class => "update" %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{backbone_show_icon "table"}Back to list".html_safe, backbone_statuses_path %></li>
<% end %>
