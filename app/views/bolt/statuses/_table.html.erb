
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Name</th>
		<th>&nbsp;</th>
	</tr>
	
	<% statuses.each_with_index do |status, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= bolt_table_cell_link status.name, bolt_status_path(status) %></td>
			<td class="delete">
				<%= link_to(bolt_show_row_icon("delete"), bolt_status_path(status), :method => :delete, :confirm => "Are you sure you want to delete this status?") %>
			</td>
		</tr>
	<% end %>
</table>
